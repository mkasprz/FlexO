<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import flexo.gui.NumberField?>
<GridPane fx:id="sphereProperties" fx:controller="flexo.gui.PropertiesController" visible="false" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <!--hgap="6.0" vgap="10.0"-->
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label text="ID"/>
        <Label fx:id="id" GridPane.columnIndex="1"/>

        <Label text="X" GridPane.rowIndex="1"/>
        <NumberField fx:id="x" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Y" GridPane.rowIndex="2"/>
        <NumberField fx:id="y" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Z" GridPane.rowIndex="3"/>
        <NumberField fx:id="z" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Parameter" GridPane.rowIndex="4"/>
        <NumberField fx:id="parameter" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </children>
</GridPane>
